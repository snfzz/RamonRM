<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".user.ClickPowerAuditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/activity_clickpoweraudit_imgmenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/menu" />

        <ImageButton
            android:id="@+id/activity_clickpoweraudit_imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="15dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="用户审核"
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_height="26dp"
            android:layout_width="26dp"
            android:src="@mipmap/name"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="姓     名:"
            android:textSize="18dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/activity_clickuseraudit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/colorTitle"
            android:layout_marginLeft="30dp"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="18sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_height="26dp"
            android:layout_width="26dp"
            android:src="@mipmap/name"
            android:layout_marginLeft="3dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="说     明:"
            android:textSize="18dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <EditText
            android:id="@+id/activity_clickuseraudit_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rectbackground"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_marginRight="100dp"
            android:textColor="@color/colorTitle"
            android:layout_marginLeft="30dp"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="18sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#34807777"

        >

        <LinearLayout
            android:id="@+id/activity_useraudit_l1"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="类别"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/activity_useraudit_l1"
            android:layout_toLeftOf="@+id/activity_useraudit_l2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="名称"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_useraudit_l2"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="操作"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/activity_clickpoweraudit_list"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        />

    <Button
        android:id="@+id/activity_clickpoweraudit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_marginTop="25dp"
        android:text="通过"
        android:textColor="@color/colorTitle"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/activity_clickpoweraudit_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_return"
        android:layout_marginTop="15dp"
        android:text="退回"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />


</LinearLayout>