<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#34807777"

        >

        <LinearLayout
            android:id="@+id/listview_useraudit_l1d"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listview_delete_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="xx"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/listview_useraudit_l1d"
            android:layout_toLeftOf="@+id/listview_useraudit_l2d"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listview_delete_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="xx"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listview_useraudit_l2d"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:gravity="center"

            >

            <ImageView
                android:id="@+id/listview_delete_photo"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:src="@mipmap/add"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>