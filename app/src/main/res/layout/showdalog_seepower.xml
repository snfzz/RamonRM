<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dip" >

    <Button
        android:id="@+id/showdalog_search_gc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seepower_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="搜索钢厂"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DAD9DB" />

    <Button
        android:id="@+id/showdalog_search_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seepower_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="搜索产品"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DAD9DB" />

    <Button
        android:id="@+id/showdalog_search_yh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seepower_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="搜索用户"
        android:textSize="16sp" />

    <Button
        android:id="@+id/showdalog_search_qx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/seepower_selector"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="取消"
        android:textSize="16sp" />

</LinearLayout>