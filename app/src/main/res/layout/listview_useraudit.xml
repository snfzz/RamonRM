<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#34807777"

        >

    <LinearLayout
        android:id="@+id/listview_useraudit_l1"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:layout_width="130dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/listview_useraudit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="xx"
            android:textSize="15dp"
            android:textColor="@drawable/listview_forselector"
            android:gravity="center"

            />
    </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/listview_useraudit_l1"
            android:layout_toLeftOf="@+id/listview_useraudit_l2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listview_useraudit_department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="xx"
                android:textColor="@drawable/listview_forselector"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listview_useraudit_l2"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="170dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/listview_useraudit_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="xx"
                android:textSize="15dp"
                android:textColor="@drawable/listview_forselector"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>