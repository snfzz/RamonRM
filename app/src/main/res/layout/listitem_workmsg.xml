<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listitem_workmsg_lblempinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="姓名 - 区域 - 手机号"
            android:textColor="@color/colorTitleMain"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listitem_workmsg_lyloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/listitem_workmsg_lblhthtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="地址："
            android:textColor="@color/colorTitleMain" />

        <TextView
            android:id="@+id/listitem_workmsg_lblloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/listitem_workmsg_lblhthtitle"
            android:textColor="@color/colorTitle" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listitem_workmsg_lytask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/listitem_workmsg_lbltasktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="任务："
            android:textColor="@color/colorTitleMain" />

        <TextView
            android:id="@+id/listitem_workmsg_lbltask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/listitem_workmsg_lbltasktitle"
            android:textColor="@color/colorTitle" />

        <TextView
            android:id="@+id/listitem_workmsg_lblinputdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="2020-01-01 19:03"
            android:textColor="@color/colorTitle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listitem_workmsg_lycontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/listitem_workmsg_lblcontent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorTitleHint">

        </RelativeLayout>

        <TextView
            android:id="@+id/listitem_workmsg_lblcontenttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="内容："
            android:textColor="@color/colorTitleMain" />

        <TextView
            android:id="@+id/listitem_workmsg_lblcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listitem_workmsg_lblcontenttitle"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorTitle"
            android:textIsSelectable="true" />

    </RelativeLayout>

</LinearLayout>