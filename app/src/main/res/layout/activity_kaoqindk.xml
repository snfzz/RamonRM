<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:id="@+id/activity_kaoqindk_lymain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgmenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/menu" />

        <ImageButton
            android:id="@+id/activity_kaoqindk_imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="15dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="考勤打卡"
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_kaoqindk_lydktype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgdktype"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/name" />

        <TextView
            android:id="@+id/activity_kaoqindk_lbldktypetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/activity_kaoqindk_imgdktype"
            android:text="打卡类别："
            android:textColor="@color/colorMain"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_kaoqindk_lbldktype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_kaoqindk_lbldktypetitle"
            android:text="出差下班打卡"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_kaoqindk_lybdtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgbdtime"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/name" />

        <TextView
            android:id="@+id/activity_kaoqindk_lblbdtimetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/activity_kaoqindk_imgbdtime"
            android:text="本地时间："
            android:textColor="@color/colorMain"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_kaoqindk_lblbdtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_kaoqindk_lblbdtimetitle"
            android:text="20:31:34"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_kaoqindk_lydkdidian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgdkdidian"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            app:srcCompat="@mipmap/name" />

        <TextView
            android:id="@+id/activity_kaoqindk_lbldkdidiantitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/activity_kaoqindk_imgdkdidian"
            android:text="打卡地点："
            android:textColor="@color/colorMain"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_kaoqindk_lbldkdidian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@+id/activity_kaoqindk_lbldkdidiantitle"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/activity_kaoqindk_imglocation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            app:srcCompat="@mipmap/loc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_kaoqindk_lybukatime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgbukatime"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            app:srcCompat="@mipmap/name" />

        <TextView
            android:id="@+id/activity_kaoqindk_lblbukatimetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/activity_kaoqindk_imgbukatime"
            android:text="补卡时间："
            android:textColor="@color/colorMain"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_kaoqindk_lblbukatime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_kaoqindk_lblbukatimetitle"
            android:text="07:50"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_kaoqindk_lybukamemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgbukamemo"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            app:srcCompat="@mipmap/name" />

        <TextView
            android:id="@+id/activity_kaoqindk_lblbukamemotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/activity_kaoqindk_imgbukamemo"
            android:text="补卡说明："
            android:textColor="@color/colorMain"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_kaoqindk_lblbukamemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_kaoqindk_lblbukamemotitle"
            android:background="@drawable/rect_background"
            android:cursorVisible="false"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/activity_kaoqindk_lvdaka"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp" >

    </ListView>

    <RelativeLayout
        android:id="@+id/activity_kaoqindk_lydakabutton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-100dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/activity_kaoqindk_imgdakabutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@mipmap/daka" />

    </RelativeLayout>

</LinearLayout>