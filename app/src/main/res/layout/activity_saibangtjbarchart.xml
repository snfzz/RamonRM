<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".SaiBangTJ.SaiBangTJBarChartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/activity_saibangtjbarchart_imgmenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/menu" />

            <ImageButton
                android:id="@+id/activity_saibangtjbarchart_imgback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="15dp"
                android:src="@mipmap/fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="塞棒详细"
                android:textColor="@color/colorTitle"
                android:textSize="18sp" />
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_saibangtjbarchart_tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rect_background"
            app:tabIndicatorColor="@color/colorTitleMain"
            app:tabPaddingEnd="20dp"
            app:tabPaddingStart="20dp"
            app:tabSelectedTextColor="@color/colorTitleMain"
            app:tabTextColor="#FFFFFF"
            app:tabGravity="center"
            app:tabMode="fixed"
            />


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/activity_saibangtjbarchart_viewpage"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            />


    </LinearLayout>

</ScrollView>