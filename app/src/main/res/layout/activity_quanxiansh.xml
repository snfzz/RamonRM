<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".user.QuanXianSHActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/activity_quanxiansh_imgmenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/menu" />

        <ImageButton
            android:id="@+id/activity_quanxiansh_imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="15dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="权限审核"
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/rect_background">

        <EditText
            android:id="@+id/activity_quanxiansh_mingcheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:background="@color/colorPrimaryGray"
            android:ems="10"
            android:hint="请输入用户名"
            android:inputType="text"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/activity_quanxiansh_btnsearch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            app:srcCompat="@mipmap/search" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:text="   待审核权限"
        android:textColor="@color/colorMain"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/activity_quanxiansh_r1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#34807777"
        android:visibility="invisible"
        >

        <LinearLayout
            android:id="@+id/activity_quanxiansh_l1"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_width="130dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="部门"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/activity_quanxiansh_l1"
            android:layout_toLeftOf="@+id/activity_quanxiansh_l2"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="姓名"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_quanxiansh_l2"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_width="170dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="申请权限"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorMain"
                />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/activity_quanxiansh_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34807777"
        />
</LinearLayout>