<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#34807777"

        >

        <LinearLayout
            android:id="@+id/listview_seepower2_l1"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listview_seepower2_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="xx"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/listview_seepower2_l2"
            android:layout_toRightOf="@+id/listview_seepower2_l1"
            android:layout_toLeftOf="@+id/listview_seepower2_l3"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listview_seepower2_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="xx"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listview_seepower2_l3"
            android:layout_toLeftOf="@+id/listview_seepower2_l4"
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listview_seepower2_power"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="xx"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listview_seepower2_l4"
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/listview_seepower2_photo"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:src="@mipmap/delete"/>

        </LinearLayout>>

    </RelativeLayout>

</LinearLayout>