<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/installationtask_dalog"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:shrinkColumns="1">

            <TableRow>

                <RelativeLayout
                    android:id="@+id/showdalog_renwuwenhao_r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/blue" />

                    <TextView
                        android:id="@+id/showdalog_renwuwenhao_txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                </RelativeLayout>
            </TableRow>


            <TableRow android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/showdalog_renwuwenhao_r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/blue" />

                    <TextView
                        android:id="@+id/showdalog_renwuwenhao_txt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </RelativeLayout>
            </TableRow>


            <TableRow android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/showdalog_renwuwenhao_r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/blue" />

                    <TextView
                        android:id="@+id/showdalog_renwuwenhao_txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                </RelativeLayout>
            </TableRow>

            <TableRow android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:id="@+id/showdalog_renwuwenhao_r4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/blue" />

                    <TextView
                        android:id="@+id/showdalog_renwuwenhao_txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />
                </RelativeLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/showdalog_renwuwenhao_photo"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/close" />


</RelativeLayout>