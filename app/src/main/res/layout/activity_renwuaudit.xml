<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".project.RenWuAuditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/activity_renwuaudit_imgmenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/menu" />

        <ImageButton
            android:id="@+id/activity_renwuaudit_imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="15dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:text="任务审核"
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_renwudiary_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="申请列表"
        android:textColor="@color/colorTitleHint"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/activity_renwuaudit_img1"
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:checked="true"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:src="@mipmap/radiobutton"
            />

        <TextView
            android:id="@+id/activity_renwuaudit_txt1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:text="审核结果:全部"
            android:textColor="#ffffff"
            android:layout_marginRight="15dp"
            />

        <ImageView
            android:id="@+id/activity_renwuaudit_img2"
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:layout_gravity="center"
            android:src="@mipmap/radiobutton"
            />

        <TextView
            android:id="@+id/activity_renwuaudit_txt2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/test1"
            android:text="复审结果:全部"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"

            />
    </LinearLayout>

    <RelativeLayout
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#848484"
        android:layout_marginTop="6dp"
        />

    <ListView
        android:id="@+id/activity_renwuaudit_listview"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>