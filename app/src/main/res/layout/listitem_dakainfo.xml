<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitem_dakainfo_imgview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            app:srcCompat="@mipmap/noimage" />

        <TextView
            android:id="@+id/listitem_dakainfo_lbldakatime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/listitem_dakainfo_imgview"
            android:text="2019"
            android:textColor="@color/colorTitle"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/listitem_dakainfo_imgtag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/listitem_dakainfo_imgview"
            app:srcCompat="@mipmap/loctag" />

        <TextView
            android:id="@+id/listitem_dakainfo_lbldakaaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/listitem_dakainfo_imgtag"
            android:text="地点"
            android:textColor="@color/colorTitle" />

        <TextView
            android:id="@+id/listitem_dakainfo_lbldakatype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="出差上班"
            android:textColor="@color/colorTitleMain" />
    </RelativeLayout>
</LinearLayout>