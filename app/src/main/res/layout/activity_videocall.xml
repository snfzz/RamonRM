<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_videocall_rlaycreateroom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/activity_videocall_imgjieting"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            app:srcCompat="@mipmap/jieting" />

        <TextView
            android:id="@+id/activity_videocall_lblname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="65dp"
            android:text="admin-123"
            android:textColor="@color/colorTitle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_videocall_lblinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="65dp"
            android:text="邀请你进行视频通话"
            android:textColor="@color/colorTitle" />

        <ImageView
            android:id="@+id/activity_videocall_imgheader"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/user" />

        <ImageView
            android:id="@+id/activity_videocall_imgjujue"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="60dp"
            app:srcCompat="@mipmap/jujie" />

        <TextView
            android:id="@+id/activity_videocall_lbljujue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="78dp"
            android:layout_marginBottom="30dp"
            android:text="拒绝"
            android:textColor="@color/colorTitle" />

        <TextView
            android:id="@+id/activity_videocall_lbljieting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="30dp"
            android:text="接听"
            android:textColor="@color/colorTitle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_videocall_rlayroom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/activity_videocall_trtcremotevideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.tencent.rtmp.ui.TXCloudVideoView>

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/activity_videocall_trtclocalvideo"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp">

        </com.tencent.rtmp.ui.TXCloudVideoView>

        <ImageView
            android:id="@+id/activity_videocall_imgjieshu_calling"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@mipmap/jujie" />

        <ImageView
            android:id="@+id/activity_videocall_imgcameraqh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@mipmap/cameraqh" />

    </RelativeLayout>
</LinearLayout>