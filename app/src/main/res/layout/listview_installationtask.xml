<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_installationtask_l1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2C2C2C"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_marginLeft="3dp"
            android:text="   合 同 号:"
            android:textColor="#2D90C5"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/listview_installationtask_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:lines="1"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="   客户名称:"
            android:textSize="15dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/listview_installationtask_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:lines="1"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="   产品名称:"
            android:textSize="15dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/listview_installationtask_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:lines="1"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="   区域经理:"
            android:textSize="15dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/listview_installationtask_txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:lines="1"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="   任务状态:"
            android:textSize="15dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/listview_installationtask_txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:lines="1"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="   节点统计:"
            android:textSize="15dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/listview_installationtask_txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTitle"
            android:lines="1"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="   详细内容:"
            android:textSize="15dp"
            android:textColor="#2D90C5"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/listview_installationtask_txt7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorTitle"
            android:lines="2"
            android:ellipsize="end"
            android:textColorHint="@color/colorTitleHint"
            android:textSize="15dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/listview_installationtask_txt8"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="   查看详细>>"
            android:textSize="12dp"
            android:textColor="#2D90C5"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    </LinearLayout>

</LinearLayout>