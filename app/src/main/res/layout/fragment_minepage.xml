<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/M0"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/headPortrait"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/head_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_minepage_lblname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/fragment_minepage_lbldeptname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryGray">

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitempassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:src="@mipmap/qxgl"
            app:title="修改密码" />

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitemzhuxiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_minepage_mitempassword"
            android:layout_marginTop="1dp"
            app:src="@mipmap/esc"
            app:title="注销登录" />

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitemyonghush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_minepage_mitemzhuxiao"
            android:layout_marginTop="10dp"
            app:src="@mipmap/yhsh"
            app:title="用户审核" />

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitemquanxiansh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_minepage_mitemyonghush"
            android:layout_marginTop="10dp"
            app:src="@mipmap/azrw"
            app:title="权限审核" />

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitemquanxiansq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_minepage_mitemquanxiansh"
            android:layout_marginTop="10dp"
            app:src="@mipmap/gzrz"
            app:title="权限申请" />

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitemquanxianck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_minepage_mitemquanxiansq"
            android:layout_marginTop="1dp"
            app:src="@mipmap/whrw"
            app:title="权限查看" />

        <com.ramon.ramonrm.controls.MineMenuItem
            android:id="@+id/fragment_minepage_mitemabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_minepage_mitemquanxianck"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:src="@mipmap/about"
            app:title="关于" />
    </RelativeLayout>

    </LinearLayout>

</ScrollView>